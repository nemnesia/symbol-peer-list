{
  "name": "symbol-peers-p2p",
  "description": "Symbolブロックチェーンノードの初期接続先Peerリストを返すWeb API",
  "version": "1.0.0",
  "author": "nemnesia",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/nemnesia/symbol-peer-list"
  },
  "keywords": [
    "symbol",
    "blockchain",
    "api",
    "peers",
    "node",
    "typescript",
    "express"
  ],
  "packageManager": "yarn@4.9.2",
  "type": "module",
  "scripts": {
    "build": "shx rm -rf dist && tsc",
    "start": "node --require dotenv/config dist/symbol-peers-p2p.js",
    "stop": "pkill -f symbol-peers-p2p.js",
    "dev": "yarn tsx watch src/symbol-peers-p2p.ts",
    "cron": "node dist/cron-peers-getter.js",
    "cron:dev": "yarn tsx watch src/cron-peers-getter.ts",
    "lint": "eslint {src,apps,libs,test}/**/*.ts",
    "lint:fix": "eslint {src,apps,libs,test}/**/*.ts --fix",
    "format": "prettier --check src/**/*.ts",
    "format:fix": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "dayjs": "^1.11.13",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@types/express": "^5",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "dotenv": "^17.2.1",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "shx": "^0.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "volta": {
    "node": "22.17.1",
    "npm": "11.5.1",
    "yarn": "4.9.2"
  }
}
